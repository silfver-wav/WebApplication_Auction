@model IEnumerable<WebApplication_Auction.ViewModels.UserVM>

@{
    ViewData["Title"] = "ViewAllUsers";
}

<h1>ViewAllUsers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                    @Html.ActionLink("Auctions", "ViewAllAuctionsByUser", new {  username=item.UserName }) |
                    @Html.ActionLink("Delete User", "DeleteUser", new {  username=item.UserName })
            </td>
        </tr>
}
    </tbody>
</table>
